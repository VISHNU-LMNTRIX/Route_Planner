{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17", // c++ language standard.

                //----------------------------------------------------------------

                // ON DEBUGGING:

                "-fdiagnostics-color=always", // color diagnostic messages in the terminal.

                "-ggdb", // used to bundle debugging info into the binary when compiling. This slows the compilation and increases the size of the binary.

                "-pedantic-errors", // turning compiler extensions off, to make the project standard across different compilers.
                
                // increase the warning levels.
                "-Wall",
                "-Weffc++",
                "-Wextra",
                "-Wconversion",
                "-Wsign-conversion",

                "-Werror", // treat warnings as errors.

                // ON PRODUCTION:

                // remove "-ggdb" and uncomment the following commands for release build. The following commands increase the efficiency of the executable and reduces its size. Suitable for production.
                // "-O2",
                // "-DNDEBUG",

                //----------------------------------------------------------------

                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}